<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!-- Network access for update checks -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Bluetooth permissions (removed for Hyper-like minimal build) -->
    
    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Wi-Fi permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- Required on API 33+ for Wiâ€‘Fi scanning -->
    <uses-permission android:name="android.permission.NEARBY_WIFI_DEVICES" />

    <!-- Notifications (required on API 33+ to post foreground notifications) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Sensor permissions -->
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />
    <uses-feature android:name="android.hardware.sensor.gyroscope" android:required="true" />
    <uses-feature android:name="android.hardware.sensor.compass" android:required="true" />
    
    <!-- BLE feature removed -->
    
    <!-- Camera permissions for SLAM -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.ar" android:required="false" />
    
    <!-- ARCore optional to allow devices without AR -->
    <uses-feature android:name="com.google.ar.core" android:required="false" />
    
    <!-- Foreground service permission -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Storage permissions for CSV logging -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
                     android:maxSdkVersion="29" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
                     android:maxSdkVersion="32" />

    <application
            android:name=".IndoorPositioningApp"
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@drawable/ic_launcher_foreground"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_launcher_foreground"
            android:supportsRtl="true"
            android:theme="@style/Theme.MyApplication"
            android:localeConfig="@xml/locale_config"
            tools:targetApi="31">
        <!-- Required by ARCore: declares this app uses AR Optional and allows Play Services for AR to manage installation -->
        <meta-data
            android:name="com.google.ar.core"
            android:value="optional" />
        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:label="@string/app_name"
                android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- BLE background service removed -->
    </application>

</manifest>